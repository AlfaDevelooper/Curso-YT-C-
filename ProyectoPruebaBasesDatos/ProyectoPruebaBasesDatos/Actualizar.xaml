        <Button Name="actualizarDatosCliente" Content="Actualizar" HorizontalAlignment="Left" Margin="71,211,0,0" VerticalAlignment="Top" Width="142" Click="actualizarDatosCliente_Click"/>

    </Grid>
</Window>
